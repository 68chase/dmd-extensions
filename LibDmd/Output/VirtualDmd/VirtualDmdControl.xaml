<UserControl x:Class="LibDmd.Output.VirtualDmd.VirtualDmdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:virtualDmd="clr-namespace:LibDmd.Output.VirtualDmd"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image x:Name="Dmd" Source="red-128x32.png">
            <Image.Effect>
                <virtualDmd:DmdEffect BlockCount="32" AspectRatio="0.25" Max="0.05"/>
            </Image.Effect>
        </Image>
        <Grid.Effect>
            <BlurEffect Radius="0"></BlurEffect>
        </Grid.Effect>
    </Grid>
</UserControl>
