<UserControl x:Class="PinDmd.Output.VirtualDmd.VirtualDmdControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinDmd.Output.VirtualDmd"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Image x:Name="Dmd" Source="red-128x32.png">
            <Image.Effect>
                <local:DmdEffect BlockCount="128" AspectRatio="4" Max="1.5"/>
            </Image.Effect>
        </Image>
        <Grid.Effect>
            <BlurEffect Radius="2"></BlurEffect>
        </Grid.Effect>
    </Grid>
</UserControl>
