<Window x:Class="App.VirtualDmd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App"
        xmlns:virtualDmd="clr-namespace:LibDmd.Output.VirtualDmd;assembly=LibDmd"
        mc:Ignorable="d"
        Title="Virtual DMD" Height="256" Width="1024"
        WindowStyle="None"
        Background="Black"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="467*"/>
            <ColumnDefinition Width="549*"/>
        </Grid.ColumnDefinitions>
        <virtualDmd:VirtualDmdControl x:Name="Dmd" Grid.ColumnSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
